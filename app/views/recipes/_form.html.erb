<div class="page_title">
  <h3>RECIPE CREATE</h3>
</div>

<%= form_with model: @recipe, local: true do |form| %>
  <%= form.label :cocktail_name, 'カクテル名', class: "cocktail_name" %>
  <%= form.text_field :cocktail_name, class: "cocktail_name_form"%>

  <div id="materials-container">
    <% @recipe.materials.each_with_index do |material, index| %>
      <div class="materials">
        <%= form.label "recipe_material_name_#{index}", '材料', class: "form_name" %>
        <%= form.text_field "materials_attributes[#{index}][material_name]", class: "form" %>

        <%= form.label "recipe_quantity_#{index}", '分量', class: "form_name"  %>
        <%= form.text_field "materials_attributes[#{index}][quantity]", class: "form" %>
      </div>
    <% end %>
  </div>
  
  <div class="instruction-container">
    <%= form.label :instruction, '作り方',class: "instruction_name" %>
    <%= form.text_area :instruction,class: "instruction" %>
  </div>
<% end %>
